@page "/{user}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <partial name="Partials/_Textbox"/>
    }
        
    <header>
        <h2> @Model.RouteName's Timeline </h2>
        <span class="display-page"> Page @Model.CurrentPage/@Model.TotalPageCount </span>
    </header>

    @if (Model.Cheeps.Any())
    {
        <partial name="Partials/_CheepContext" model="Model"/>
        <partial name="Partials/_Pagination" model="Model"/>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>


@*! Follower and Followee names are reverse... *@

<!-- Your Followers -->
<h3>Following:</h3>
@foreach (var follower in Model.Followers)
{
    <p><a href="/@follower.Name">@follower.Name</a></p>
}

<!-- Your Followees -->
<h3>Followers:</h3>
@foreach (var followee in Model.Followees)
{
    <p><a href="/@followee.Name">@followee.Name</a></p>
}