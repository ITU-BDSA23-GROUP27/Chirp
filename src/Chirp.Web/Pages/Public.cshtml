@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    @*! Textbox  *@
    @if (User.Identity?.IsAuthenticated == true)
    {

        <partial name="Partials/_Textbox"/>
    }

    @*! Header  *@
    <header>
        <h2> Public Timeline </h2>
        <span class="display-page"> Page @Model.CurrentPage/@Model.TotalPageCount </span>
    </header>

    @if (Model.Cheeps.Any())
    {
        @*! Context  *@
        <partial name="Partials/_CheepContext" model="Model"/>

        @*! Pagination  *@
        <partial name="Partials/_Pagination" model="Model"/>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

