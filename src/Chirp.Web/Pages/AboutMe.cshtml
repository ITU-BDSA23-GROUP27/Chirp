@page
@model Chirp.Web.Pages.AboutMeModel
@{
}

@{
    if (!User.Identity?.IsAuthenticated == true)
    {
        RedirectToPage("/");
    }
}

@* 
@foreach (var claim in User.Claims)
{
    <p>@claim.Type: <span style="color: crimson">@claim.Value<span/></p>
} 
*@

<h2>About Me</h2>

<div class="user-info">
    <img src=@Model.Avatar class="claim-img" alt="1">
    <p>
        <span class="label">ID:</span> 
        <span class="">@Model.ID<span/>
    </p>
    <p>
        <span class="label">Username:</span> 
        <span class="">@Model.Username<span/>
    <p>
        <span class="label">Name:</span> 
        <span class="">@Model.Name<span/>
    </p>
    <p>
        <span class="label">Email:</span> 
        <span class="">@Model.Email<span/>
    </p>
    <p>
        <span class="label">GitHub URL:</span> 
        <a href="@Model.GithubURL" target="_blank">@Model.GithubURL</a>
    </p>
</div>



@*! Followers  *@

<!-- Your Followers -->
<h3>Following:</h3>
@foreach (var follower in Model.Followers)
{
    <p><a href="/@follower.Name">@follower.Name</a></p>
}

<!-- Your Followees -->
<h3>Followers:</h3>
@foreach (var followee in Model.Followees)
{
    <p><a href="/@followee.Name">@followee.Name</a></p>
}

<hr/>

@*! Download My Data *@
<div class="">
    <h3>Get user data</h3>
    <p>Get a copy of your user data.</p>
    <div class="end">
        <button class="seed-btn">Download Data</button>
    </div>
</div>

<hr/>

@*! Forget Me *@
<div class="">
    <h3>Delete account</h3>
    <p style="color: red">- Describe what happens when the account is deleted (deleted data, updated to anonymous, ...) </p>
    <p>Do not want to be a part of Chirp! anymore? </p>
    <div class="end">
        <button class="unseed-btn">Forget Me</button>
    </div>
</div>

<hr/>

@*! My Cheeps *@
<div>
   <h3>My Cheeps</h3>
    <partial name="Partials/_CheepContext" model="Model"/>
    <partial name="Partials/_Pagination" model="Model"/>
</div>